div.page-header.text-center
  h3 Create a new user

div.text-center
  div
    form(ng-submit="userCtrl.submit()")
      div
        input(type="text" required placeholder="Username" ng-model="userCtrl.user.username")
      div
        input(type="password" required placeholder="Password" ng-model="userCtrl.user.password")
      div
        input(type="submit" value="Submit").btn.btn-default.submit-button

  div(ng-model="userCtrl.success")
    {{userCtrl.success}}
